<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoder 默认配置为PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/debug.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/backup/%d{yyyy-MM/dd/}debugs.%i.log.zip</fileNamePattern>
			<maxHistory>90</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy  class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
		        <maxFileSize>100MB</maxFileSize>
		    </timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
	
	<logger name="java.sql.Connection">
		<level value="WARN" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level value="WARN" />
	</logger>
	<logger name="java.sql.Statement">
		<level value="WARN" />
	</logger>
	<logger name="java.sql.ResultSet">
		<level value="WARN" />
	</logger>
	<logger name="jdbc.sqlonly">
		<level value="WARN" />
	</logger>
	<logger name="jdbc.sqltiming">
		<level value="INFO" />
	</logger>
	<logger name="jdbc.audit">
		<level value="WARN" />
	</logger>
	<logger name="jdbc.resultset">
		<level value="WARN" />
	</logger>
	<logger name="jdbc.connection">
		<level value="WARN" />
	</logger>
	
	<logger name="org.springframework">
		<level value="WARN" />
	</logger>
	
	<logger name="org.apache.commons.httpclient">
		<level value="WARN" />
	</logger>
	
	<logger name="log4jdbc.debug">
		<level value="WARN" />
	</logger>
	
	<logger name="org.directwebremoting" >
		<level value="WARN" />
	</logger>
	<logger name="org.directwebremoting.extend" >
		<level value="ERROR" />
	</logger>
	<logger name="org.directwebremoting.dwrp" >
		<level value="ERROR" />
	</logger>
	
	<logger name="com.alibaba.druid.pool" >
		<level value="INFO" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="ERROR"></level>
	</logger>
	<logger name="org.apache.commons.beanutils">
		<level value="WARN" />
	</logger>
	<logger name="net.rubyeye">
		<level value="INFO"></level>
	</logger>
	<logger name="com.google.code.yanf4j">
		<level value="INFO"></level>
	</logger>
	<logger name="org.quartz">
		<level value="WARN" />
	</logger>
	<logger name="com.bl.core.quartz">
		<level value="DEBUG" />
	</logger>
	<logger name="httpclient.wire.content">
		<level value="WARN" />
	</logger>
	<logger name="org.apache.http">
		<level value="WARN" />
	</logger>
	<logger name="com.alibaba.dubbo.common.extension.ExtensionLoader">
		<level value="WARN" />
	</logger>
	
	<appender name="FILE_WW_CORE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/ww.core.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/backup/%d{yyyy-MM/dd/}/ww.core.%i.log.zip</fileNamePattern>
			<maxHistory>90</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<logger name="ww.core">
		<level value="DEBUG" />
		<appender-ref ref="FILE_WW_CORE" />
	</logger>
</configuration> 
